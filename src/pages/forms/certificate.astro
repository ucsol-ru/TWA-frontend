---
import Layout from '../../layouts/Layout.astro';
import Form from '../../components/Form.astro';
import Collapse from '../../components/Collapse.astro';
---

<Layout title="Сертификация|Универсальные Грузовые Решения">
  <main class="container mx-auto p-4">
    <Form heading='Сертификация'>
      <Collapse>
        <div class="form-control">
          <label class="label cursor-pointer">
            <span class="label-text">Международная перевозка грузов</span> 
            <input type="checkbox" class="checkbox checkbox-primary" />
          </label>
        </div>
        <div class="form-control">
          <label class="label cursor-pointer">
            <span class="label-text">Таможенное оформление</span> 
            <input type="checkbox" class="checkbox checkbox-primary" />
          </label>
        </div>
        <div class="form-control">
          <label class="label cursor-pointer">
            <span class="label-text">Страхование</span> 
            <input type="checkbox" class="checkbox checkbox-primary" />
          </label>
        </div>
        <hr class="my-4">
        <label class="form-control w-full">
          <div class="label">
            <span class="label-text">Наименование грузов, товаров</span>
          </div>
          <input type="text" class="input input-bordered w-full" placeholder="Например: Бумага"/>
        </label>
        <label class="form-control w-full">
          <div class="label">
            <span class="label-text">Вид необходимого документа</span>
          </div>
          <input type="text" class="input input-bordered w-full" placeholder="Например: СТ-1"/>
        </label>
        <div class="form-control">
          <div class="label">
            <span class="label-text">Срок действия сертификата</span> 
          </div>
          <select class="select select-bordered w-full">
            <option disabled selected>Не выбрано</option>
            <option>1 год</option>
            <option>3 года</option>
            <option>5 лет</option>
          </select>
        </div>
      </Collapse>
    </Form>
  </main>
</Layout>