---
import Layout from '../../layouts/Layout.astro';
import Form from '../../components/Form.astro';
import Collapse from '../../components/Collapse.astro';
---

<Layout title="Сертификация|Универсальные Грузовые Решения">
  <main class="container mx-auto p-4">
    <Form heading='Сертификация' 
          formTitle="Сертификация грузов" 
          formName="certificate">
      <Collapse>
        <div class="form-control">
          <label class="label cursor-pointer" for="check1">
            <span class="label-text">Международная перевозка грузов</span> 
            <input type="checkbox" name="check1" id="check1" class="checkbox checkbox-primary" />
          </label>
        </div>
        <div class="form-control">
          <label class="label cursor-pointer" for="check2">
            <span class="label-text">Таможенное оформление</span> 
            <input type="checkbox" name="check2" id="check2" class="checkbox checkbox-primary" />
          </label>
        </div>
        <div class="form-control">
          <label class="label cursor-pointer" for="check3">
            <span class="label-text">Страхование</span> 
            <input type="checkbox" name="check3" id="check3" class="checkbox checkbox-primary" />
          </label>
        </div>
        <hr class="my-4">
        <label class="form-control w-full" for="gruz">
          <div class="label">
            <span class="label-text">Наименование грузов, товаров</span>
          </div>
          <input type="text" name="gruz" id="gruz" class="input input-bordered w-full" placeholder="Например: Бумага"/>
        </label>
        <label class="form-control w-full" for="doc">
          <div class="label">
            <span class="label-text">Вид необходимого документа</span>
          </div>
          <input type="text" name="doc" id="doc" class="input input-bordered w-full" placeholder="Например: СТ-1"/>
        </label>
        <div class="form-control">
          <div class="label">
            <span class="label-text">Срок действия сертификата</span> 
          </div>
          <select name="sert" id="sert" class="select select-bordered w-full">
            <option disabled selected>Не выбрано</option>
            <option>1 год</option>
            <option>3 года</option>
            <option>5 лет</option>
          </select>
        </div>
      </Collapse>
    </Form>
  </main>
</Layout>